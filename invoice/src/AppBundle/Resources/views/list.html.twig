{% extends 'base.html.twig' %}
{% block body %}
    <div >
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Number</th>
                <th scope="col">Buyer</th>
                <th scope="col">Created at</th>
                <th scope="col">Sale Date</th>
                <th scope="col">Terms Payment</th>
                <th scope="col">Bank Account</th>
                <th scope="col">Items number</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for invoice in invoices %}
                <tr>
                    <td scope="row">{{ invoice.id }}</td>
                    <td scope="row">{{ invoice.nr }}</td>
                    <td scope="row">{{ invoice.idBuyer }}</td>
                    <td scope="row">{{ invoice.createdAt|date('Y-m-d') }}</td>
                    <td scope="row">{{ invoice.saleDate|date('Y-m-d') }}</td>
                    <td scope="row">{{ invoice.termsPayment }}</td>
                    <td scope="row">{{ invoice.bankAccount }}</td>
                    {#<td>{{ invoice.items }}</td>#}
                    <td scope="row">
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('edit', { 'id': invoice.id }) }}">show</a>
                            <a class="btn btn-default btn-xs"
                                   href="{{ path('delete', { 'id': invoice.id }) }}">edit</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

    {% block stylesheets %}
    {% endblock %}